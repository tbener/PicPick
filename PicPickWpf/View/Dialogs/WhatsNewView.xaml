<metro:MetroWindow x:Class="PicPick.View.Dialogs.WhatsNewView"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                   mc:Ignorable="d"
                   ResizeMode="CanResizeWithGrip"
                   Style="{StaticResource ToolWindowStyle}"
                   WindowStartupLocation="CenterOwner"
                   Title="What's New" Height="183.502" Width="660">
    <Grid Margin="10 20 10 5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="1" Content="OK" Command="{Binding CloseCommand}" HorizontalAlignment="Right"/>
    </Grid>
</metro:MetroWindow>
