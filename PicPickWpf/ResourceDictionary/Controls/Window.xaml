<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="BaseWindowStyle" TargetType="{x:Type metro:MetroWindow}" BasedOn="{StaticResource {x:Type metro:MetroWindow}}" >
        <Setter Property="TitleCharacterCasing" Value="Normal"/>
    </Style>

    <Style x:Key="ToolWindowStyle" TargetType="{x:Type metro:MetroWindow}" BasedOn="{StaticResource BaseWindowStyle}" >
        <Setter Property="WindowStyle" Value="ToolWindow"/>
        <Setter Property="ShowMinButton" Value="False"/>
        <Setter Property="ShowMaxRestoreButton" Value="False"/>
        <Setter Property="ShowInTaskbar" Value="False"/>
    </Style>


</ResourceDictionary>